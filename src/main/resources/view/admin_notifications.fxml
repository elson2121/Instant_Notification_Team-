<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="adminHeader" alignment="CENTER" style="-fx-background-color: #2D62ED; -fx-padding: 10;">
         <children>
            <Label text="Admin Dashboard" style="-fx-text-fill: white; -fx-font-size: 16px;" />
         </children>
      </HBox>
      <TextField fx:id="subjectField" promptText="Enter Subject..." />
      <TextArea fx:id="messageArea" promptText="Type message here..." VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <CheckBox fx:id="emailCheckbox" mnemonicParsing="false" text="Email" />
            <CheckBox fx:id="smsCheckbox" mnemonicParsing="false" text="SMS" />
         </children>
      </HBox>
      <Button fx:id="btnSendNotification" onAction="#handleSendNotification" mnemonicParsing="false" style="-fx-background-color: #2D62ED; -fx-text-fill: white; -fx-font-size: 14px;" text="Send Notification" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>