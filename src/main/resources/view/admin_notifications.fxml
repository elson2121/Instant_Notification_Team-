<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox alignment="TOP_CENTER" spacing="20.0">
         <children>
            <Label text="Compose Notification" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2D62ED;" />

            <VBox spacing="10.0" alignment="CENTER_LEFT" maxWidth="800">
               <Label text="Subject" style="-fx-font-weight: bold; -fx-text-fill: #555;" />
               <TextField fx:id="subjectField" promptText="Enter notification subject..." style="-fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />
            </VBox>

            <VBox spacing="10.0" alignment="CENTER_LEFT" maxWidth="800">
               <Label text="Message" style="-fx-font-weight: bold; -fx-text-fill: #555;" />
               <TextArea fx:id="messageArea" promptText="Type your message here..." wrapText="true" prefHeight="200" style="-fx-background-color: #f9f9f9; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />
            </VBox>

            <VBox spacing="10.0" style="-fx-background-color: #f0f2f5; -fx-padding: 15; -fx-background-radius: 10;" maxWidth="800">
               <Label text="Target Audience" style="-fx-font-weight: bold; -fx-text-fill: #2D62ED; -fx-font-size: 14px;" />
               <GridPane hgap="15" vgap="10">
                   <columnConstraints>
                       <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                       <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                   </columnConstraints>
                   <children>
                       <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                           <Label text="Department" style="-fx-text-fill: #555;" />
                           <ComboBox fx:id="departmentCombo" promptText="All Departments" maxWidth="Infinity" style="-fx-background-color: white; -fx-border-color: #2D62ED; -fx-border-radius: 5; -fx-background-radius: 5;" />
                       </VBox>
                       <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                           <Label text="Role" style="-fx-text-fill: #555;" />
                           <ComboBox fx:id="roleCombo" promptText="All Roles" maxWidth="Infinity" style="-fx-background-color: white; -fx-border-color: #2D62ED; -fx-border-radius: 5; -fx-background-radius: 5;" />
                       </VBox>
                       <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                           <Label text="Sex" style="-fx-text-fill: #555;" />
                           <ComboBox fx:id="sexCombo" promptText="All" maxWidth="Infinity" style="-fx-background-color: white; -fx-border-color: #2D62ED; -fx-border-radius: 5; -fx-background-radius: 5;" />
                       </VBox>
                       <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <Label text="Shift" style="-fx-text-fill: #555;" />
                           <ComboBox fx:id="shiftCombo" promptText="All Shifts" maxWidth="Infinity" style="-fx-background-color: white; -fx-border-color: #2D62ED; -fx-border-radius: 5; -fx-background-radius: 5;" />
                       </VBox>
                   </children>
               </GridPane>
            </VBox>

            <VBox alignment="CENTER" spacing="15.0" maxWidth="800">
               <HBox alignment="CENTER" spacing="30.0">
                  <CheckBox fx:id="emailCheckbox" mnemonicParsing="false" text="Send via Email" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                  <CheckBox fx:id="smsCheckbox" mnemonicParsing="false" text="Send via SMS" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
               </HBox>
               <Button fx:id="btnSendNotification" onAction="#handleSendNotification" mnemonicParsing="false" style="-fx-background-color: #2D62ED; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 30; -fx-background-radius: 20; -fx-cursor: hand;" text="Send Notification" />
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>