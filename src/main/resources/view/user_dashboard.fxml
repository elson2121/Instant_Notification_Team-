<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.instantnotificationsystem.controller.UserDashboardController"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: linear-gradient(to bottom right, #0f2027, #203a43, #2c5364);">

    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: rgba(255,255,255,0.05); -fx-padding: 15 30;">
            <Label text="INSTANT NOTIFICATION SYSTEM" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER" spacing="10">
                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="welcomeLabel" text="User" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Label text="Online" style="-fx-text-fill: #2ecc71; -fx-font-size: 10px;"/>
                </VBox>
                <Circle radius="18" fill="#3498db"/>
            </HBox>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="10" prefWidth="250" style="-fx-background-color: rgba(0,0,0,0.2); -fx-padding: 30 15;">
            <Button text="ðŸ“Š  Dashboard" maxWidth="Infinity" alignment="BASELINE_LEFT"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-padding: 12 20; -fx-background-radius: 8; -fx-cursor: hand;"/>
            <Button text="ðŸ””  Notifications" maxWidth="Infinity" alignment="BASELINE_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-padding: 12 20; -fx-cursor: hand;"/>
            <Button text="ðŸ“©  My Notifications" maxWidth="Infinity" alignment="BASELINE_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-padding: 12 20; -fx-cursor: hand;"/>
            <Button text="âš™ï¸  Account Settings" maxWidth="Infinity" alignment="BASELINE_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-padding: 12 20; -fx-cursor: hand;"/>
            <Button text="ðŸ“ˆ  Analytics" maxWidth="Infinity" alignment="BASELINE_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: #bdc3c7; -fx-padding: 12 20; -fx-cursor: hand;"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            <Button fx:id="btnLogout" text="ðŸšª  Logout" maxWidth="Infinity" alignment="BASELINE_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-padding: 12 20; -fx-cursor: hand;"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox spacing="25" style="-fx-padding: 30;">
                
                <!-- Top Row: Notifications & Preferences -->
                <HBox spacing="25">
                    <!-- My Notifications Panel -->
                    <VBox HBox.hgrow="ALWAYS" spacing="15" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                        <Label text="My Notifications" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <ListView fx:id="notificationsListView" VBox.vgrow="ALWAYS" prefHeight="300" style="-fx-background-color: transparent;"/>
                    </VBox>

                    <!-- Preferences Panel -->
                    <VBox prefWidth="300" spacing="20">
                        <!-- Notification Preferences -->
                        <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                            <Label text="Preferences" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label text="Email Notifications" style="-fx-text-fill: #bdc3c7;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                                <CheckBox fx:id="emailToggle" selected="true"/>
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label text="SMS Notifications" style="-fx-text-fill: #bdc3c7;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                                <CheckBox fx:id="smsToggle"/>
                            </HBox>
                        </VBox>

                        <!-- Departments Filter -->
                        <VBox spacing="10" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                            <Label text="Departments" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <CheckBox text="Human Resources" selected="true" style="-fx-text-fill: #bdc3c7;"/>
                            <CheckBox text="IT Support" selected="true" style="-fx-text-fill: #bdc3c7;"/>
                            <CheckBox text="Marketing" selected="true" style="-fx-text-fill: #bdc3c7;"/>
                            <CheckBox text="Finance" style="-fx-text-fill: #bdc3c7;"/>
                        </VBox>
                    </VBox>
                </HBox>

                <!-- Bottom Row: Analytics -->
                <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                    <Label text="Analytics Snapshot" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <HBox spacing="30" alignment="CENTER">
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                            <Label text="Distribution by Department" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
                            <PieChart fx:id="departmentChart" prefHeight="250" legendVisible="true"/>
                        </VBox>
                        <Separator orientation="VERTICAL"/>
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                            <Label text="Notifications Over Time" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
                            <LineChart fx:id="activityChart" prefHeight="250">
                                <xAxis><CategoryAxis label="Day" tickLabelFill="white"/></xAxis>
                                <yAxis><NumberAxis label="Count" tickLabelFill="white"/></yAxis>
                            </LineChart>
                        </VBox>
                    </HBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>