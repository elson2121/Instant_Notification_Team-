<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.instantnotificationsystem.controller.RegisterController" style="-fx-background-color: -fx-green-soft;" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
    <HBox prefHeight="700.0" prefWidth="1000.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <!-- Left Panel: Green Gradient -->
        <VBox alignment="CENTER_LEFT" spacing="30" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefWidth="400"
              style="-fx-background-color: -fx-green-deep; -fx-padding: 60;">

            <VBox spacing="5">
                <Label text="JOIN US" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px; -fx-font-weight: bold; -fx-letter-spacing: 2px;"/>
                <Label text="CREATE ACCOUNT" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-wrap-text: true;"/>
                <Label text="Get started with Instant Notification System" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 16px;"/>
            </VBox>

            <VBox spacing="20">
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="✓" style="-fx-font-size: 18px; -fx-text-fill: #d4edda; -fx-font-weight: bold;"/>
                    <Label text="Instant alerts across all channels" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                </HBox>
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="✓" style="-fx-font-size: 18px; -fx-text-fill: #d4edda; -fx-font-weight: bold;"/>
                    <Label text="Manage your preferences easily" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                </HBox>
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="✓" style="-fx-font-size: 18px; -fx-text-fill: #d4edda; -fx-font-weight: bold;"/>
                    <Label text="Secure and reliable communication" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                </HBox>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <Button text="← Back to Login" onAction="#handleBackToLogin"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 10 20;"/>
        </VBox>

        <!-- Right Panel: Registration Form -->
        <ScrollPane fitToWidth="true" fitToHeight="true" HBox.hgrow="ALWAYS" style="-fx-background-color: -fx-green-soft;">
            <VBox alignment="CENTER" spacing="25" style="-fx-background-color: -fx-green-soft; -fx-padding: 40 60;">

                <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="500">
                    <Label text="Registration" styleClass="header-text" style="-fx-font-size: 28px;"/>
                    <Label text="Please fill in your details below" style="-fx-text-fill: #6b7280; -fx-font-size: 14px;"/>
                </VBox>

                <GridPane hgap="20" vgap="20" maxWidth="500">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                    </columnConstraints>

                    <!-- Personal Info Section -->
                    <Label text="Personal Information" styleClass="header-text" style="-fx-font-size: 14px;" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                        <Label text="Full Name *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <TextField fx:id="fullNameField" promptText="Enter your full name" prefHeight="40" styleClass="text-field" style="-fx-border-color: -fx-green-deep;"/>
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <Label text="Username *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <TextField fx:id="usernameField" promptText="Choose username" prefHeight="40" styleClass="text-field" style="-fx-border-color: -fx-green-deep;"/>
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Label text="Phone Number *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <TextField fx:id="phoneField" promptText="+251..." prefHeight="40" styleClass="text-field" style="-fx-border-color: -fx-green-deep;"/>
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
                        <Label text="Password *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <StackPane>
                            <PasswordField fx:id="passwordField" promptText="Create a strong password" prefHeight="40" styleClass="password-field" style="-fx-border-color: -fx-green-deep;"/>
                            <TextField fx:id="passwordFieldVisible" managed="false" visible="false" promptText="Create a strong password" prefHeight="40" styleClass="text-field" style="-fx-border-color: -fx-green-deep;"/>
                        </StackPane>
                    </VBox>

                    <CheckBox fx:id="showPasswordCheckbox" text="Show password" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

                    <!-- Employment Info Section -->
                    <Label text="Employment Details" styleClass="header-text" style="-fx-font-size: 14px;" GridPane.columnSpan="2" GridPane.rowIndex="5"/>

                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="6">
                        <Label text="Employee ID" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <TextField fx:id="employeeIdField" promptText="e.g. EMP-001" prefHeight="40" styleClass="text-field" style="-fx-border-color: -fx-green-deep;"/>
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="6">
                        <Label text="Department *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <ComboBox fx:id="departmentComboBox" promptText="Select Dept" prefHeight="40" maxWidth="Infinity" styleClass="combo-box" style="-fx-border-color: -fx-green-deep;"/>
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="7">
                        <Label text="Role *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <ComboBox fx:id="roleComboBox" promptText="Select Role" prefHeight="40" maxWidth="Infinity" styleClass="combo-box" style="-fx-border-color: -fx-green-deep;"/>
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="7">
                        <Label text="Shift *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <ComboBox fx:id="shiftComboBox" promptText="Select Shift" prefHeight="40" maxWidth="Infinity" styleClass="combo-box" style="-fx-border-color: -fx-green-deep;"/>
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="8">
                        <Label text="Sex" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <ComboBox fx:id="sexComboBox" promptText="Select Sex" prefHeight="40" maxWidth="Infinity" styleClass="combo-box" style="-fx-border-color: -fx-green-deep;"/>
                    </VBox>

                </GridPane>

                <Label fx:id="errorLabel" textFill="#ef4444" visible="false" wrapText="true" maxWidth="500" style="-fx-background-color: #fee2e2; -fx-padding: 10; -fx-background-radius: 6;"/>

                <Button text="Create Account" onAction="#handleRegister" prefHeight="45" maxWidth="500" styleClass="primary-button"/>

                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" style="-fx-text-fill: #6b7280;"/>
                    <Hyperlink text="Sign in here" onAction="#handleBackToLogin" style="-fx-text-fill: -fx-green-primary; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </HBox>
</AnchorPane>