<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.instantnotificationsystem.controller.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Register New User" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Employee ID:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="employeeIdField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="Sex:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <ComboBox fx:id="sexComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Shift:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <ComboBox fx:id="shiftComboBox" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

        <Label text="Department:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <ComboBox fx:id="departmentComboBox" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    </GridPane>

    <Label fx:id="errorLabel" textFill="red" visible="false"/>

    <Button text="Register" onAction="#handleRegister"/>
</VBox>
