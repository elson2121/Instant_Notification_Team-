<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.instantnotificationsystem.controller.LoginController"
      prefHeight="700.0" prefWidth="1000.0">

    <!-- Left Panel: Blue Gradient -->
    <VBox alignment="CENTER_LEFT" spacing="30" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefWidth="500"
          style="-fx-background-color: linear-gradient(to bottom right, #3b82f6, #2563eb, #1d4ed8); -fx-padding: 60;">
        
        <VBox spacing="5">
            <Label text="WELCOME TO" style="-fx-text-fill: rgba(255,255,255,0.7); -fx-font-size: 14px; -fx-font-weight: bold; -fx-letter-spacing: 2px;"/>
            <Label text="NOTIFICATION ENGINE" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold; -fx-wrap-text: true;"/>
            <Label text="Instant Notification Engine" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 18px;"/>
        </VBox>

        <VBox spacing="20">
            <!-- Feature Card 1 -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                <Label text="ðŸ””" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
                <VBox>
                    <Label text="Real-time Notifications" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <Label text="Instant Notification Engine" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 12px;"/>
                </VBox>
            </HBox>

            <!-- Feature Card 2 -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                <Label text="ðŸ‘¥" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
                <VBox>
                    <Label text="Multi-channel Support" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <Label text="User Management" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 12px;"/>
                </VBox>
            </HBox>

            <!-- Feature Card 3 -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                <Label text="ðŸ“Š" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
                <VBox>
                    <Label text="Advanced Analytics" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <Label text="Analytics Dashboard" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 12px;"/>
                </VBox>
            </HBox>
        </VBox>

        <Region VBox.vgrow="ALWAYS"/>
        <Label text="Â© 2024 Instant Notification Engine" style="-fx-text-fill: rgba(255,255,255,0.6); -fx-font-size: 12px;"/>
    </VBox>

    <!-- Right Panel: Forms -->
    <StackPane fx:id="formsContainer" HBox.hgrow="ALWAYS" prefWidth="500">
        
        <!-- Login Form -->
        <VBox fx:id="loginForm" alignment="CENTER" spacing="30" style="-fx-background-color: #f9fafb;">
            <padding><Insets top="40" right="60" bottom="40" left="60"/></padding>
            
            <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="400">
                <Label text="Welcome Back!" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #111827;"/>
                <Label text="Please sign in to your account" style="-fx-text-fill: #6b7280; -fx-font-size: 14px;"/>
            </VBox>
            
            <VBox spacing="20" maxWidth="400">
                <VBox spacing="8">
                    <Label text="Username or Email" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                    <TextField fx:id="loginUsernameField" promptText="Enter your username" prefHeight="45"
                               style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                </VBox>
                
                <VBox spacing="8">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Hyperlink text="Forgot password?" style="-fx-text-fill: #2563eb; -fx-font-size: 12px;"/>
                    </HBox>
                    <StackPane alignment="CENTER_RIGHT">
                        <PasswordField fx:id="loginPasswordField" promptText="Enter your password" prefHeight="45"
                                       style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                        <TextField fx:id="loginPasswordFieldVisible" promptText="Enter your password" prefHeight="45" visible="false"
                                   style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    </StackPane>
                </VBox>
                
                <HBox spacing="20">
                    <CheckBox fx:id="showLoginPasswordCheckbox" text="Show password" style="-fx-text-fill: #4b5563;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <CheckBox text="Remember me" style="-fx-text-fill: #4b5563;"/>
                </HBox>
                
                <Label fx:id="loginErrorLabel" textFill="#ef4444" visible="false" wrapText="true"/>
                
                <Button text="Sign In" onAction="#handleLogin" prefHeight="45" maxWidth="Infinity"
                        style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
                
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" style="-fx-text-fill: #6b7280;"/>
                    <Hyperlink text="Register here" onAction="#showRegisterView" style="-fx-text-fill: #2563eb; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>
        </VBox>
        
        <!-- Register Form -->
        <VBox fx:id="registerForm" visible="false" style="-fx-background-color: white;">
            <padding><Insets top="40" right="60" bottom="40" left="60"/></padding>
            
            <!-- Top Bar -->
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 20 0;">
                <Button text="â† Back to Sign In" onAction="#showLoginView" 
                        style="-fx-background-color: transparent; -fx-text-fill: #6b7280; -fx-cursor: hand; -fx-font-weight: bold;"/>
            </HBox>

            <VBox spacing="5" alignment="CENTER_LEFT" style="-fx-padding: 0 0 30 0;">
                <Label text="Create Account" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #111827;"/>
                <Label fx:id="regStepLabel" text="Step 1 of 2" style="-fx-text-fill: #6b7280; -fx-font-size: 14px;"/>
            </VBox>
            
            <StackPane VBox.vgrow="ALWAYS">
                <!-- Step 1 -->
                <VBox fx:id="regStep1" spacing="20" maxWidth="400">
                    <VBox spacing="5">
                        <Label text="Full Name *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <TextField fx:id="regFullNameField" promptText="Enter your full name" prefHeight="40"
                                   style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Username *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <TextField fx:id="regUsernameField" promptText="Choose a username" prefHeight="40"
                                   style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Password *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <StackPane alignment="CENTER_RIGHT">
                            <PasswordField fx:id="regPasswordField" promptText="Create a password" prefHeight="40"
                                           style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                            <TextField fx:id="regPasswordFieldVisible" promptText="Create a password" prefHeight="40" visible="false"
                                       style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                        </StackPane>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Confirm Password *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <StackPane alignment="CENTER_RIGHT">
                            <PasswordField fx:id="regConfirmPasswordField" promptText="Re-enter your password" prefHeight="40"
                                           style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                            <TextField fx:id="regConfirmPasswordFieldVisible" promptText="Re-enter your password" prefHeight="40" visible="false"
                                       style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                        </StackPane>
                    </VBox>
                    
                    <CheckBox fx:id="showRegPasswordCheckbox" text="Show passwords" style="-fx-text-fill: #4b5563;"/>
                    
                    <VBox spacing="5">
                        <Label text="Phone *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <TextField fx:id="regPhoneField" promptText="Enter your phone number" prefHeight="40"
                                   style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    </VBox>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <Button text="Next" onAction="#handleNextStep" prefHeight="45" maxWidth="Infinity"
                            style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
                </VBox>
                
                <!-- Step 2 -->
                <VBox fx:id="regStep2" spacing="20" maxWidth="400" visible="false">
                    <VBox spacing="5">
                        <Label text="Employee ID *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <TextField fx:id="regEmployeeIdField" promptText="Enter your employee ID" prefHeight="40"
                                   style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Role *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <ComboBox fx:id="regRoleComboBox" promptText="Select your role" prefWidth="Infinity" prefHeight="40"
                                  style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Sex *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <ComboBox fx:id="regSexComboBox" promptText="Select your sex" prefWidth="Infinity" prefHeight="40"
                                  style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Shift *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <ComboBox fx:id="regShiftComboBox" promptText="Select your shift" prefWidth="Infinity" prefHeight="40"
                                  style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    </VBox>
                    
                    <VBox spacing="5">
                        <Label text="Department *" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <ComboBox fx:id="regDepartmentComboBox" promptText="Select your department" prefWidth="Infinity" prefHeight="40"
                                  style="-fx-background-color: white; -fx-border-color: #60a5fa; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    </VBox>
                    
                    <Label fx:id="regErrorLabel" textFill="#ef4444" visible="false" wrapText="true"/>
                    
                    <Region VBox.vgrow="ALWAYS"/>
                    
                    <HBox spacing="15">
                        <Button text="Previous" onAction="#handlePrevStep" prefHeight="45" prefWidth="120"
                                style="-fx-background-color: #9ca3af; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
                        <Button text="Create Account" onAction="#handleRegister" prefHeight="45" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                                style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>
            </StackPane>

            <!-- Error Label moved outside of steps to be visible in both -->
            <Label fx:id="regErrorLabel" textFill="#ef4444" visible="false" wrapText="true" style="-fx-padding: 10 0 0 0;"/>
        </VBox>
    </StackPane>
</HBox>