<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" styleClass="root" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="login-form-panel">
         <children>
            <Label text="Compose Notification" styleClass="h2" />

            <VBox spacing="10.0" alignment="CENTER_LEFT" maxWidth="800">
               <Label text="Subject" styleClass="h4" />
               <TextField fx:id="subjectField" promptText="Enter notification subject..." styleClass="text-field" />
            </VBox>

            <VBox spacing="10.0" alignment="CENTER_LEFT" maxWidth="800">
               <Label text="Message" styleClass="h4" />
               <TextArea fx:id="messageArea" promptText="Type your message here..." wrapText="true" prefHeight="200" styleClass="text-area" />
            </VBox>

            <VBox spacing="10.0" styleClass="form-section" maxWidth="800">
               <Label text="Target Audience" styleClass="h3" />
               <GridPane hgap="15" vgap="10">
                   <columnConstraints>
                       <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                       <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                   </columnConstraints>
                   <children>
                       <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                           <Label text="Department" styleClass="label" />
                           <ComboBox fx:id="departmentCombo" promptText="All Departments" maxWidth="Infinity" styleClass="combo-box" />
                       </VBox>
                       <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                           <Label text="Role" styleClass="label" />
                           <ComboBox fx:id="roleCombo" promptText="All Roles" maxWidth="Infinity" styleClass="combo-box" />
                       </VBox>
                       <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                           <Label text="Sex" styleClass="label" />
                           <ComboBox fx:id="sexCombo" promptText="All" maxWidth="Infinity" styleClass="combo-box" />
                       </VBox>
                       <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <Label text="Shift" styleClass="label" />
                           <ComboBox fx:id="shiftCombo" promptText="All Shifts" maxWidth="Infinity" styleClass="combo-box" />
                       </VBox>
                   </children>
               </GridPane>
            </VBox>

            <VBox alignment="CENTER" spacing="15.0" maxWidth="800">
               <HBox alignment="CENTER" spacing="30.0">
                  <CheckBox fx:id="emailCheckbox" mnemonicParsing="false" text="Send via Email" />
                  <CheckBox fx:id="smsCheckbox" mnemonicParsing="false" text="Send via SMS" />
               </HBox>
               <Button fx:id="btnSendNotification" onAction="#handleSendNotification" mnemonicParsing="false" styleClass="primary-button" text="Send Notification" />
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
